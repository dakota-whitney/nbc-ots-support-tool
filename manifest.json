{
    "manifest_version": 3,
    "name": "OTS Support Tool",
    "version": "0.0.0.1",
    "description": "NBCULocal OTS Digital support and devtools extension",
    "permissions": ["notifications","browsingData","desktopCapture","downloads","scripting","webRequest","webNavigation"],
    "action": {
        "default title": "OTS Support Tool",
        "default_popup": "ext/ui.html",
        "default_icon": {
            "32": "/icons/support_b_32.png",
            "48": "/icons/support_b_48.png",
            "128": "/icons/support_b_128.png"
          }
    },
    "devtools_page": "init.html",
    "background":{
        "service_worker": "listeners.js",
        "type": "module"
    },
    "host_permissions": [
        "https://*.nbcwpshield.com/*",
        "https://*.nbcnewyork.com/*",
